{
  "definitions": {
    "repository": {
      "$id": "#repository",
      "type": "object",
      "title": "Split-Repository",
      "required": [
        "url",
        "path",
        "version"
      ],
      "properties": {
        "url": {
          "type": "string",
          "title": "Url",
          "description": "Url to git repository.",
          "default": "",
          "examples": [
            "https://github.com/organisation/config.git"
          ]
        },
        "path": {
          "type": "string",
          "title": "Path",
          "description": "Local path to repository.",
          "default": "",
          "examples": [
            "/pathToMonoRepository/packages/config"
          ]
        },
        "version": {
          "type": "string",
          "title": "Version",
          "description": "Version for repository.",
          "default": "",
          "examples": [
            "1.0.0"
          ]
        }
      }
    },
    "repositories": {
      "$id": "#repositories",
      "type": "object",
      "title": "Split-Repositories",
      "description": "A list of split repositories.",
      "patternProperties": {
        "(^[a-z]|[A-Z0-9])[a-z]*": {
          "$ref": "#repository"
        }
      }
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/dandelionphp/dandelion/master/resources/dandelion.schema.json",
  "type": "object",
  "title": "Dandelion Configuration",
  "required": [
    "repositories",
    "pathToTempDirectory"
  ],
  "properties": {
    "repositories": {
      "$ref": "#repositories"
    },
    "pathToTempDirectory": {
      "$id": "/properties/pathToTempDirectory",
      "type": "string",
      "title": "Path to temp directory",
      "default": "",
      "examples": [
        "/tmp/"
      ]
    },
    "pathToSplitshLite": {
      "$id": "/properties/pathToSplitshLite",
      "type": "string",
      "title": "Path to splitsh lite ",
      "default": "",
      "examples": [
        "/usr/local/bin/splitsh-lite"
      ]
    }
  }
}
